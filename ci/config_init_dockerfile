# set base image (host OS)
FROM morgana-harbor.psi.ch/bec/python:3.8

# set the working directory in the container
WORKDIR /code

# copy the content of the local directory to the working directory
COPY ./bec_client_lib ./bec/bec_client_lib
COPY ./scibec/init_scibec/demo_config.yaml ./bec/bec_client_lib/demo_config.yaml
COPY ./semantic_release ./bec/semantic_release

RUN pip install -e ./bec/bec_client_lib
WORKDIR /code/bec/

# command to run on container start
CMD [ "python", "/code/bec/bec_client_lib/bec_client_lib/core/init_config.py", "--config", "/code/bec/bec_client_lib/demo_config.yaml"]
