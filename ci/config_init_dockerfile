# set base image (host OS)
FROM python:3.8

# set the working directory in the container
WORKDIR /code

# copy the content of the local directory to the working directory
COPY ./bec_client_lib.core ./bec/bec_client_lib.core/
COPY ./scibec/init_scibec/demo_config.yaml ./bec/bec_client_lib.core/demo_config.yaml

RUN pip install -e ./bec/bec_client_lib.core
WORKDIR /code/bec/

# command to run on container start
CMD [ "python", "/code/bec/bec_client_lib.core/bec_client_lib.core/init_config.py", "--config", "/code/bec/bec_client_lib.core/demo_config.yaml"]
